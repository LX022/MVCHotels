@model WebApplication.ViewModels.Recu

@{
    ViewBag.Title = "ShowReservation";
}

<h2>Votre réservation</h2>

@if (Model.IdReservation != 0)
{
    <h4>Reçu</h4>
    <hr />

    <dl class="dl-horizontal">
        <dt>
            <p>Référence : </p>
        </dt>

        <dd>
            @Html.DisplayFor(model => model.IdReservation)
        </dd>

        <dt>
            <p>Nom : </p>
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Name)
        </dd>

        <dt>
            <p>Prénom : </p>
        </dt>

        <dd>
            @Html.DisplayFor(model => model.FirstName)
        </dd>

        <dt>
            <p>Date d'arrivée : </p>
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Start)
        </dd>

        <dt>
            <p>Date de départ : </p>
        </dt>

        <dd>
            @Html.DisplayFor(model => model.End)
        </dd>

        <dt>
            <p>Prix : </p>
        </dt>

        <dd>
            @Html.DisplayFor(model => model.price)
        </dd>

        <dt>
            <p>Chambre(s) : </p>
        </dt>

        <dd>

            @foreach (var item in Model.rooms)
            {

                @Html.DisplayFor(modelItem => item.Number)<text>  </text>

            }

        </dd>

    </dl>



    <p>
        @Html.ActionLink("Retour à l'acceuil", "Index", "Home") |
        @Html.ActionLink("Annuler la reservation", "DeleteReservation", "Reservation", new { id = Model.IdReservation }, null)
    </p>
}

else
{
    <text>Cette réservation n'exite pas </text>
}