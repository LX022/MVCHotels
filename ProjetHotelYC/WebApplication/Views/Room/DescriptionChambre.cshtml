@model WebApplication.ViewModels.RoomDescription

@{
    ViewBag.Title = "DescriptionChambre";
}

<h2>Détails de la chambre</h2>

<div>
    <hr />
    <dl class="dl-horizontal">
        <dt class="hidden">
            @Html.DisplayNameFor(model => model.IdRoom)
        </dt>

        <dd class="hidden">
            @Html.DisplayFor(model => model.IdRoom)
        </dd>

        <dt class="hidden">
            @Html.DisplayNameFor(model => model.description)
        </dt>

        <dd>
            @Html.Raw(Model.description)
        </dd>

    </dl>
</div>

<div>
    @foreach (var item in Model.Url)
    {
        <center> <a href=@item.ToString()><img src=@item.ToString() width="500"></a></center>
    }

</div>


